<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_layout"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_menu_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/viewselecterdrawer"
        android:paddingLeft="@dimen/padding_margin_5">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/img_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@drawable/selector_iconcolr"
            android:textSize="@dimen/font_22"
            android:text="c" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/actv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/search_name"
            android:textColor="@drawable/selector_textcolor"
            android:textSize="@dimen/font_18" />

    </LinearLayout>

</LinearLayout>

